<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Pollux\DomainBundle\Entity\Product" repository-class="Pollux\DomainBundle\Repository\ProductRepository" table="product">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="dateCreated" type="datetime" column="date_created" nullable="false"/>
    <field name="sku" type="string" column="sku" length="100" nullable="false"/>
    <field name="timeSpec" type="string" column="time_spec" length="100" nullable="false"/>
    <field name="productName" type="string" column="product_name" length="100" nullable="false"/>
    <field name="pricing" type="decimal" column="pricing" precision="6" scale="2" nullable="false"/>
    <field name="startDate" type="date" column="start_date" nullable="false"/>
    <field name="endDate" type="date" column="end_date" nullable="false"/>
    <field name="status" type="boolean" column="status" nullable="false"/>
    <field name="vatPercentage" type="decimal" column="vat_percentage" precision="6" scale="2" nullable="false"/>
  </entity>
</doctrine-mapping>
