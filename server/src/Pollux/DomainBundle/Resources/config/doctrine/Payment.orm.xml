<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Pollux\DomainBundle\Entity\Payment" table="payment">
    <indexes>
      <index name="fk_payment_products_idx" columns="product_id"/>
      <index name="fk_payment_user_idx" columns="user_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="initiatedAt" type="datetime" column="initiated_at" nullable="false"/>
    <field name="completedAt" type="datetime" column="completed_at" nullable="true"/>
    <field name="amount" type="decimal" column="amount" precision="10" scale="2" nullable="true"/>
    <field name="transactionResponse" type="text" column="transaction_response" length="65535" nullable="true"/>
    <field name="status" type="string" column="status" length="32" nullable="false"/>
    <one-to-one field="subscription" target-entity="Subscription" mapped-by="payment"/>
    <many-to-one field="product" target-entity="Product">
      <join-columns>
        <join-column name="product_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="user" target-entity="User">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
