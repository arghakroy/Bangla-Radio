<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#50AA0E"
                      android:endColor="#82C353"
                      android:angle="90"/>
            <corners android:radius="4dip" />
            <stroke android:color="#ADDB81" android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#82C353"
                      android:endColor="#50AA0E"
                      android:angle="90"/>
            <corners android:radius="4dip" />
