<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#D29E00"
                      android:endColor="#DFB910"
                      android:angle="90"/>
            <corners android:radius="4dip" />
            <stroke android:color="#ECD300" android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#40DFB910"
                      android:endColor="#40D29E00"
                      android:angle="90"/>
            <corners android:radius="4dip" />
        </shape>
    </item>
</selector>