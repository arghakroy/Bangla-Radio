<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#5EB0FC"
                      android:endColor="#A1DDFF"
                      android:angle="90"/>
            <corners android:radius="4dip" />
            <stroke android:color="#498FA2" android:width="2dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#A1DDFF"
                      android:endColor="#5EB0FC"
                      android:angle="90"/>
            <corners android:radius="4dip" />
            <stroke android:color="#498FA2" android:width="2dp"/>
        </shape>
    </item>
</selector>