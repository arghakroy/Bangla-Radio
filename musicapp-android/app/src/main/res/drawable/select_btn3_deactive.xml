<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#0089B3"
                      android:endColor="#11AAC8"
                      android:angle="90"/>
            <corners android:radius="4dip" />
            <stroke android:color="#16CEE1" android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#4011AAC8"
                      android:endColor="#400089B3"
                      android:angle="90"/>
            <corners android:radius="4dip" />
        </shape>
    </item>
</selector>