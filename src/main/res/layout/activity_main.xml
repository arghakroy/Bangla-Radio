<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#F1F1F1"
              tools:context="com.polluxlab.banglamusic.MainActivity">

    <android.support.v4.view.ViewPager
      android:id="@+id/pager"
      android:layout_width="match_parent"
      android:layout_weight="1"
      android:layout_height="0dp">
    </android.support.v4.view.ViewPager>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#282828"
      android:padding="10dp"
      >
        <Button
          android:id="@+id/mainFreeBtn"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@drawable/select_btn1"
          android:textColor="#000"
          android:layout_marginRight="20dp"
          android:textSize="20sp"
          android:textStyle="bold"
          android:text="@string/string_free"/>
        <Button
          android:id="@+id/mainPremBtn"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@drawable/select_btn2"
          android:textColor="#000"
          android:layout_marginRight="20dp"
          android:text="@string/string_prem"/>
        <Button
          android:id="@+id/mainAccBtn"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@drawable/select_btn3"
          android:textColor="#000"
          android:text="@string/string_set"/>
    </LinearLayout>
</LinearLayout>
