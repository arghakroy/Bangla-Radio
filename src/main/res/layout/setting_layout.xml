<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  android:background="#EFEFEF"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="#447452"
          android:layout_margin="25dp"
          android:padding="15dp">

            <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              >

                <com.polluxlab.banglamusic.helper.MyTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="৫ "
                  android:textColor="#fff"
                  android:gravity="center_horizontal"
                  android:textSize="45sp"/>

                <com.polluxlab.banglamusic.helper.MyTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/string_dayrest"
                  android:textColor="#fff"
                  android:textSize="25sp"/>
            </LinearLayout>

            <com.polluxlab.banglamusic.helper.MyTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="মেয়াদ শেষ হবে ৫ ডিসেম্বর ২০১৪"
              android:textColor="#fff"
              android:gravity="center_horizontal"
              android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#F9F9F9"
          android:gravity="center"
          android:padding="10dp"
          android:layout_margin="20dp"
          android:orientation="vertical">

            <com.polluxlab.banglamusic.helper.MyTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/string_st1"
              android:textSize="22sp"
              android:textColor="#C72121"
              />

            <com.polluxlab.banglamusic.helper.MyTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/string_st2"
              android:textSize="22sp"
              android:textColor="#C72121"
              />

            <com.polluxlab.banglamusic.helper.MyTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/string_pkg1"
              android:textSize="22sp"

              />

            <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/string_buy"
              android:id="@+id/button"
              android:background="#EAC416"
              android:layout_margin="15dp"
              android:textSize="20sp"
              android:padding="10dp"
              android:textStyle="bold"
              android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>