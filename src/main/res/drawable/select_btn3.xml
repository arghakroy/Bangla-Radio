<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#008E2A"
                      android:endColor="#3AAE67"
                      android:angle="90"/>
            <corners android:radius="8dip" />
            <stroke android:color="#46CA8A" android:width="2dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#3AAE67"
                      android:endColor="#008E2A"
                      android:angle="90"/>
            <corners android:radius="8dip" />
            <stroke android:color="#46CA8A" android:width="2dp"/>
        </shape>
    </item>
</selector>